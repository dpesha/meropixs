<div id="fb-root"></div>
<div id="supersized-loader"></div>
<div id="wrap">
	<div id="header">
		<div id="login">
		  <% if (everyauth.loggedIn) { %>
            <p> Hello, <%=everyauth.facebook.user.name%> , 
              <a href="/logout"> Logout</a> </p>
          <% } else { %>
            <a href="javascript:openOAuthPopup('/auth/facebook',facebookAuthenticateCallback)"/> Login with facebook </a> 
          <% } %> 
		</div>
	</div>
	<div id="main">
		<div id="social" align="right"></div>
		<div id="gallery_container">
    		<ul class="gallery"></ul>
		</div>
		<div id="slide_container">
			<ul id="supersized"></ul>
			
			<!--Thumbnail Navigation-->
			<div id="prevthumb"></div>
			<div id="nextthumb"></div>

			<!--Arrow Navigation-->
			<a id="prevslide" class="load-item"></a>
			<a id="nextslide" class="load-item"></a>

			<div id="thumb-tray" class="load-item">
  				<div id="thumb-back"></div>
  				<div id="thumb-forward"></div>
			</div>

			<!--Time Bar-->
			<div id="progress-back" class="load-item">
  				<div id="progress-bar"></div>
			</div>

			<!--Control Bar-->
			<div id="controls-wrapper" class="load-item">
  				<div id="controls">
		    		<a id="play-button"><img id="pauseplay" src="images/ss/pause.png"/></a>
        			<!--Slide counter-->
    				<div id="slidecounter">
      					<span class="slidenumber"></span> / <span class="totalslides"></span>
    				</div>
		   			<!--Slide captions displayed here-->
    				<div id="slidecaption"></div>

    				<!--Thumb Tray button-->
    				<a id="tray-button"><img id="tray-arrow" src="images/ss/button-tray-up.png"/></a>

    				<!--Navigation-->
    				<ul id="slide-list"></ul>
				</div>
			</div>  
	  	</div><!-- End of slide container-->    	
	</div> <!-- End of main --> 
</div> <!-- End of wrap-->
<div id="footer">
	<div id="footerText">
		<span>powered by <a href="http://www.facebook.com">facebook</a>, <a href="http://jquery.com/">jQuery</a>, <a href="http://buildinternet.com/project/supersized/">supersized!</a>, <a href="http://eightmedia.github.com/hammer.js/">hammer.js</a>, <a href="https://github.com/balupton/History.js/">history.js</a></span>
	</div>
	<div id="social" >
		<span>find us on <a href="http://www.facebook.com/GetGlimpses">facebook</a></span>
	</div>
</div>
<<script type="text/javascript">
	function openOAuthPopup(url,callback){
		var popupWindow = popupwindow(url, "popupWindow", 500, 250);
		var timer = setInterval(function() {   
		    if(popupWindow.closed) 
		    {  
		    	clearTimeout(timer);	    		
	    		callback();
		    }  
		}, 1000);
	}

	function popupwindow(url, title, w, h) {
		var left = (screen.width/2)-(w/2);
		var top = (screen.height/2)-(h/2);
		return window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left);
	}

	function facebookAuthenticateCallback() {
		if (window.location.pathname!="/" && "" == "true") {
	         window.location = "/auth/facebook?redirectUrl="+encodeURIComponent(document.URL);
	      } else {
	         window.location = "/";
	      }      
	}
</script>